<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Title Text -->
    <TextView
        android:id="@+id/tvGameModeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_game_mode"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <!-- Player vs Player Button -->
    <Button
        android:id="@+id/btnPlayerVsPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_vs_player"
        android:layout_marginBottom="16dp"/>

    <!-- Player vs CPU Button -->
    <Button
        android:id="@+id/btnPlayerVsCPU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_vs_cpu"
        android:layout_marginBottom="16dp"/>

</LinearLayout>