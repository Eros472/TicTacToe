<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Audio Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio Settings"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Volume Label -->
        <TextView
            android:id="@+id/tvVolumeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume: 50%"
            android:layout_marginBottom="8dp" />

        <!-- Volume Adjustment -->
        <SeekBar
            android:id="@+id/seekBarVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:layout_marginBottom="16dp" />

        <!-- Sound Effects Switch -->
        <Switch
            android:id="@+id/switchSoundEffects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sound Effects"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            android:minWidth="48dp" />


        <!-- CPU Difficulty -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU Difficulty"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupCpuDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioEasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy" />

            <RadioButton
                android:id="@+id/radioMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium" />

            <RadioButton
                android:id="@+id/radioHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hard" />
        </RadioGroup>

        <!-- Theme Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light" />

            <RadioButton
                android:id="@+id/radioDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark" />

            <RadioButton
                android:id="@+id/radioHighContrast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Contrast" />
        </RadioGroup>

    </LinearLayout>
</ScrollView>
